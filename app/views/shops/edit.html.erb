<!DOCTYPE html>
<h1>ラーメン日記</h1>
<h1>🍥登録したラーメン情報の変更🍥</h1>
<%= form_for(@shop) do |f| %>
  <div><%= f.label :ラーメン屋の名前 %></div>
  <div><%= f.text_field :title %></div>
  <%=raw sprintf(
            f.date_select(
                :visit_date,
                use_month_numbers: true,
                start_year:        1930,
                end_year:          Time.now.year,
                default:           Date.today,
                date_separator:    '%s'), # 年月日区切りをそれぞれ指定
            '年 ', '月 ') + '日'%>
  <div><%= f.file_field :image %></div>
  <div><%= f.select :grade, [1,2,3,4,5] %></div>
  <div><%= f.text_field :comment %></div>
  <div><%= f.submit %></div>

<% end %>
<%= link_to '戻る', shops_path %>